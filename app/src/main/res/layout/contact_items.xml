<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/storeImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/storeNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:layout_toRightOf="@+id/storeImageView"
            android:text="xfffs"
            android:textSize="19sp"
            android:textColor="@color/black32"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/storeDescTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/storeNameTextView"
            android:layout_toRightOf="@+id/storeImageView"
           android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="xfffs"
            android:textSize="15sp"
            android:textColor="@color/insta_green"
           />

    </RelativeLayout>


</android.support.v7.widget.CardView>